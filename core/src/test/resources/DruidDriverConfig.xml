    <filter name="stat" class="com.alibaba.druid.proxy.filter.stat.StatFilter"/>
    <filter name="log4j"
            class="com.alibaba.druid.proxy.filter.logging.Log4jFilter"/>
    <filter name="commonLogging"
            class="com.alibaba.druid.proxy.filter.logging.CommonsLogFilter"/>
</filters>