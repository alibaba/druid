            class="com.alibaba.druid.proxy.filter.encoding.EncodingConvertFilter"
            configClass="com.alibaba.druid.proxy.config.EncodingDruidFilterConfig">
        <prop name="ClientEncoding" value="gbk"/>
        <prop name="ServerEncoding" value="utf8"/>
